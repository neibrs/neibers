  $suggestions[] = 'seat__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'seat__' . $entity->id();
  $suggestions[] = 'seat__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
