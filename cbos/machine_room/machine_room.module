<?php

/**
 * @file
 * Contains machine_room.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function machine_room_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the machine_room module.
    case 'help.page.machine_room':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The machine room of store computer equipments.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function machine_room_theme() {
  return [
    'room' => [
      'render element' => 'elements',
      'file' => 'machine_room.page.inc',
      'template' => 'room',
      ],
    'room_content_add_list' => [
      'render element' => 'content',
      'variables' => ['content' => NULL],
      'file' => 'machine_room.page.inc',
    ],
  ];
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function machine_room_theme_suggestions_room(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#room'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'room__' . $sanitized_view_mode;
  $suggestions[] = 'room__' . $entity->bundle();
  $suggestions[] = 'room__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'room__' . $entity->id();
  $suggestions[] = 'room__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
